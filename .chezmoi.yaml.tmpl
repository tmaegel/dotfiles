{{- /* Checks if running interactively, which is not the case for GitHub Codespaces */ -}}
{{- $interactive := stdinIsATTY -}}

{{- $name := "Toni MÃ¤gel" -}}
{{- /* If name was previously set, reuses it */ -}}
{{- if hasKey . "name" -}}
{{-   $name = .name -}}
{{- /* Otherwise, if running interactively, prompts for a name */ -}}
{{- else if $interactive -}}
{{-   $name = promptString "What is your fullname" $name -}}
{{- end -}}

{{- $email := "tmaegel@posteo.de" -}}
{{- if hasKey . "email" -}}
{{-   $email = .email -}}
{{- else if $interactive -}}
{{-   $email = promptString "What is your email address" $email -}}
{{- end -}}

{{- $personal := false -}}
{{- if hasKey . "personal" -}}
{{-   $personal = .personal -}}
{{- else if $interactive -}}
{{-   $personal = promptBool "Is this your personal machine" $personal -}}
{{- end -}}

